<view class='rate-group'>
          <image style='width:{{starsize}}rpx; height:{{starsize}}rpx;' wx:for="{{yellows}}" wx:key="*this" src="/images/rate-yellow.png"></image>
          <image style='width:{{starsize}}rpx; height:{{starsize}}rpx;' wx:for="{{halfs}}" wx:key="*this" src="/images/rate-half.png"></image>
          <image style='width:{{starsize}}rpx; height:{{starsize}}rpx;' wx:for="{{greys}}" wx:key="*this" src="/images/rate-grey.png"></image>
          <text wx:if="{{istext}}" style='font-size:{{fontsize}}rpx;color:{{fontcolor}};'>{{ratetext}}</text>
</view>
